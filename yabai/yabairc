yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Window animations (place these immediately after loading scripting addition)
# yabai -m config window_animation_duration    0.15
# yabai -m config window_animation_frame_rate  60

# Window Management
yabai -m config layout bsp
yabai -m config window_placement second_child

# padding
yabai -m config top_padding 8
yabai -m config right_padding 8
yabai -m config bottom_padding 8
yabai -m config left_padding 8
yabai -m config window_gap 8

#mouse
yabai -m config mouse_follows_focus on
yabai -m config mouse_action1 move #left click + drag
yabai -m config mouse_action2 resize #right click + drag
yabai -m config mouse_drop_action swap

# Ignore
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Karabiner-elements$" manage=off

yabai -m rule --add app="^CleanShot X$" manage=off

yabai -m rule --add app="^CLIP STUDIO PAINT$" manage=off
yabai -m rule --add app="^Clip Studio Paint$" manage=off
yabai -m rule --add app=".*CLIP STUDIO.*" manage=off
yabai -m rule --add app=".*Clip Studio.*" manage=off

